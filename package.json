{
  "name": "@sudobility/sudojo_lib",
  "version": "0.0.12",
  "description": "Business logic library for Sudojo app",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:coverage:threshold": "vitest run --coverage --reporter=verbose",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "check-all": "npm run lint && npm run typecheck && npm run test:run",
    "quick-check": "npm run lint && npm run typecheck",
    "dev": "npm run build:watch"
  },
  "keywords": [
    "sudojo",
    "typescript",
    "library",
    "dependency-injection"
  ],
  "author": "Sudobility team",
  "license": "MIT",
  "devDependencies": {
    "@sudobility/di": "^1.5.8",
    "@sudobility/sudojo_client": "^0.0.11",
    "@sudobility/sudojo_types": "^1.1.8",
    "@sudobility/types": "^1.9.40",
    "@tanstack/react-query": "^5.90.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^4.0.4"
  },
  "peerDependencies": {
    "@sudobility/di": "^1.5.8",
    "@sudobility/sudojo_client": "^0.0.11",
    "@sudobility/sudojo_types": "^1.1.8",
    "@sudobility/types": "^1.9.40",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
